<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
          crossorigin="anonymous">
</head>
<body class="bg-light">
<div class="container py-4">
    <!-- Header -->
    <header class="text-center mb-4">
        <h1 class="display-5"><%= headerText %></h1>
    </header>

    <!-- Your Items Section -->
    <section class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Your Items</h2>
            <% if ( userId === 2) { %>
                <a href="/assignment4/commissions" class="btn btn-primary">View Commissions</a>
            <% } %>
            <a href="/assignment4/home" class="btn btn-primary">Browse All Items</a>
            <a href="/assignment4/items/submit" class="btn btn-primary">Add New Item</a>
            <a href="/assignment4/auth/logout" class="btn btn-primary">Logout</a>

        </div>
        <% if (userItems && userItems.length > 0) { %>
            <ul class="list-group mt-3">
                <% userItems.forEach(item => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/assignment4/items/<%= item.id %>" class="text-decoration-none">
                            <%= item.title %>
                        </a>
                        <span class="badge bg-secondary">Quantity: <%= item.quantity %></span>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-muted mt-3">No items added yet.</p>
        <% } %>
    </section>

    <!-- Purchased Items Section -->
    <section class="mb-4">
        <h2>Purchased Items</h2>
        <% if (purchasedItems && purchasedItems.length > 0) { %>
            <ul class="list-group mt-3">
                <% purchasedItems.forEach(item => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/assignment4/purchase/<%= item.purchase_id %>" class="text-decoration-none">
                            <%= item.title %>
                        </a>
                        <span class="text-muted">Purchased on: <%= item.transaction_date %></span>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-muted mt-3">No purchased items found.</p>
        <% } %>
    </section>

    <!-- Search Form -->
    <section class="mb-4">
        <form id="search-form" class="row gy-2 gx-3 align-items-center">
            <div class="col-auto">
                <label for="searchKeyword" class="visually-hidden">Search</label>
                <input type="text" class="form-control" id="searchKeyword" name="keyword" placeholder="Search items"
                       required>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </section>

    <!-- Search Results Section -->
    <section id="search-results" class="mt-4"></section>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous">
</script>
<script>
    const searchForm = document.getElementById('search-form');
    const searchResults = document.getElementById('search-results');

    // Handle Search Form Submission
    searchForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const keyword = document.getElementById('searchKeyword').value;

        const response = await fetch(`/assignment4/search?keyword=${encodeURIComponent(keyword)}`);
        const items = await response.json();

        searchResults.innerHTML = '';
        if (items.length > 0) {
            const listGroup = document.createElement('ul');
            listGroup.className = 'list-group mt-3';

            items.forEach((item) => {
                const li = document.createElement('li');
                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                li.innerHTML = `
                    <a href="/assignment4/items/${item.id}" class="text-decoration-none">
                        ${item.title}
                    </a>
                    <span class="fw-bold">Price: $${item.price}</span>
                `;
                listGroup.appendChild(li);
            });

            searchResults.appendChild(listGroup);
        } else {
            searchResults.textContent = 'No items found.';
        }
    });
</script>
</body>
</html>
