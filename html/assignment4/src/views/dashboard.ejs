<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
          crossorigin="anonymous">
</head>
<body class="bg-light">
<div class="container py-4">
    <!-- Header -->
    <header class="text-center mb-4">
        <h1 class="display-5"><%= headerText %></h1>
    </header>

    <!-- Your Items Section -->
    <section class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Your Items</h2>
            <!-- Link to Submit Item -->
            <a href="/assignment4/items/submit" class="btn btn-primary">Add New Item</a>
        </div>
        <% if (userItems && userItems.length > 0) { %>
            <ul class="list-group mt-3">
                <% userItems.forEach(item => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><%= item.title %></span>
                        <span class="badge bg-secondary">Quantity: <%= item.quantity %></span>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-muted mt-3">No items added yet.</p>
        <% } %>
    </section>

    <!-- Purchased Items Section -->
    <section class="mb-4">
        <h2>Purchased Items</h2>
        <% if (purchasedItems && purchasedItems.length > 0) { %>
            <ul class="list-group mt-3">
                <% purchasedItems.forEach(item => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><%= item.title %></span>
                        <span class="text-muted">Purchased on: <%= item.transaction_date %></span>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-muted mt-3">No purchased items found.</p>
        <% } %>
    </section>

    <!-- Search Form -->
    <section class="mb-4">
        <form id="search-form" class="row gy-2 gx-3 align-items-center">
            <div class="col-auto">
                <label for="searchKeyword" class="visually-hidden">Search</label>
                <input type="text" class="form-control" id="searchKeyword" name="keyword" placeholder="Search items"
                       required>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </section>

    <!-- Search Results Section -->
    <section id="search-results" class="mt-4"></section>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous">
</script>
<script>
    // Fetch data for User Items and Purchased Items dynamically
    async function fetchData() {
        const userItems = await fetch('/assignment4/dashboard/items').then(res => res.json());
        const purchasedItems = await fetch('/assignment4/dashboard/purchases').then(res => res.json());

        const userItemsList = document.getElementById('user-items');
        const purchasedItemsList = document.getElementById('purchased-items');

        // Update User Items
        if (userItems.length > 0) {
            userItemsList.innerHTML = '';
            userItems.forEach(item => {
                const li = document.createElement('li');
                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                li.innerHTML = `<span>${item.title}</span><span class="badge bg-secondary">Quantity: ${item.quantity}</span>`;
                userItemsList.appendChild(li);
            });
        }

        // Update Purchased Items
        if (purchasedItems.length > 0) {
            purchasedItemsList.innerHTML = '';
            purchasedItems.forEach(item => {
                const li = document.createElement('li');
                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                li.innerHTML = `<span>${item.title}</span><span class="text-muted">Purchased on: ${item.transaction_date}</span>`;
                purchasedItemsList.appendChild(li);
            });
        }
    }

    fetchData();

    const searchForm = document.getElementById('search-form');
    const searchResults = document.getElementById('search-results');

    // Handle Search Form Submission
    searchForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const keyword = document.getElementById('searchKeyword').value;

        const response = await fetch(`/assignment4/search?keyword=${encodeURIComponent(keyword)}`);
        const items = await response.json();

        searchResults.innerHTML = '';
        if (items.length > 0) {
            items.forEach((item) => {
                const div = document.createElement('div');
                div.className = 'border p-3 mb-2';
                div.innerHTML = `
                        <h3>${item.title}</h3>
                        <p>${item.description}</p>
                        <p class="fw-bold">Price: $${item.price}</p>
                    `;
                searchResults.appendChild(div);
            });
        } else {
            searchResults.textContent = 'No items found.';
        }
    });
</script>
</body>
</html>
