<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-4">
    <!-- Header Section -->
    <header class="text-center mb-4">
        <h1 class="mb-3">Available Items</h1>
        <!-- Search Form -->
        <form action="/search" method="get" class="d-flex justify-content-center mb-3">
            <input
                    type="text"
                    name="keyword"
                    class="form-control me-2"
                    placeholder="Search for items..."
                    style="max-width: 300px;"
                    required>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <!-- Dashboard Button -->
        <a href="/assignment4/dashboard/load" class="btn btn-secondary">Go to Dashboard</a>
    </header>

    <!-- Items Section -->
    <main>
        <div class="row g-4">
            <% if (items && items.length > 0) { %>
                <% items.forEach(item => { %>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <img
                                    src="<%= item.image_url %>"
                                    class="card-img-top"
                                    alt="<%= item.title %>"
                                    style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.title %></h5>
                                <p class="card-text"><%= item.description %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="text-muted">No available items at the moment.</p>
                </div>
            <% } %>
        </div>
    </main>
</div>

<!-- Bootstrap JS and Dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
