<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-4">
    <!-- Header Section -->
    <header class="text-center mb-4">
        <h1 class="mb-3">Available Items</h1>
        <!-- Search Form -->
        <!-- Search Form -->
        <section class="mb-4">
            <form id="search-form" class="row gy-2 gx-3 align-items-center">
                <div class="col-auto">
                    <label for="searchKeyword" class="visually-hidden">Search</label>
                    <input type="text" class="form-control" id="searchKeyword" name="keyword" placeholder="Search items"
                           required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </section>

        <!-- Search Results Section -->
        <section id="search-results" class="mt-4"></section>
        <!-- Dashboard Button -->
        <a href="/assignment4/dashboard/load" class="btn btn-secondary">Go to Dashboard</a>
    </header>

    <!-- Items Section -->
    <main>
        <div class="row g-4">
            <% if (items && items.length > 0) { %>
                <% items.forEach(item => { %>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <% if (item.image_url) { %>
                                <img src="<%= item.image_url %>" class="img-fluid rounded-start" alt="Item Image">
                            <% } else { %>
                                <img src="https://mnlht.com/wp-content/uploads/2017/06/no_image_placeholder.png" class="img-fluid rounded-start"
                                     alt="Placeholder Image">
                            <% } %>
                            <div class="card-body">
                                <a href="/assignment4/items/<%= item.id %>" class="card-title">
                                    <%= item.title %>
                                </a>
                                <p class="card-text"><%= item.description %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="text-muted">No available items at the moment.</p>
                </div>
            <% } %>
        </div>
    </main>
</div>

<script>
    const searchForm = document.getElementById('search-form');
    const searchResults = document.getElementById('search-results');

    // Handle Search Form Submission
    searchForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const keyword = document.getElementById('searchKeyword').value;

        const response = await fetch(`/assignment4/search?keyword=${encodeURIComponent(keyword)}`);
        const items = await response.json();

        searchResults.innerHTML = '';
        if (items.length > 0) {
            const listGroup = document.createElement('ul');
            listGroup.className = 'list-group mt-3';

            items.forEach((item) => {
                const li = document.createElement('li');
                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                li.innerHTML = `
                    <a href="/assignment4/items/${item.id}" class="text-decoration-none">
                        ${item.title}
                    </a>
                    <span class="fw-bold">Price: $${item.price}</span>
                `;
                listGroup.appendChild(li);
            });

            searchResults.appendChild(listGroup);
        } else {
            searchResults.textContent = 'No items found.';
        }
    });
</script>

<!-- Bootstrap JS and Dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
